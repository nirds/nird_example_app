<p id="notice"><%= notice %></p>

<div class="container">
  <div class="jumbotron">
    <% unless user_signed_in? %>
      <%= link_to "Sign-Up", new_user_registration_path %>
    <% else %>
      <%= link_to "Get your next gif and leave a feeling", new_gif_path , class: "btn btn-primary btn-lg" %>
    <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Feeling</th>
      <th>Gif</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gifs.each do |gif| %>
      <tr>
        <h1>So how do you feel about this .gif?</h1>
          <%= image_tag "#{gif.gif_id}" , class: "center-block" %>
        </div>
        <td><%= gif.user %></td>
        <td><%= gif.feeling %></td>
        <td><%= link_to 'Show', gif %></td>
        <td><%= link_to 'Edit', edit_gif_path(gif) %></td>
        <td><%= link_to 'Destroy', gif, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gif', new_gif_path %>
